<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="rockBean"
          class="com.practice.filmorate.Testing.RockMusic">
    </bean>

    <bean id="classicalBean"
          class="com.practice.filmorate.Testing.ClassicalMusic">
    </bean>

    <bean id="folkBean"
          class="com.practice.filmorate.Testing.FolkMusic">
    </bean>

    <bean id="musicPlayer" class="com.practice.filmorate.Testing.MusicPlayer">
        <property name="musicList">
            <list>
                <ref bean="rockBean"/>
                <ref bean="classicalBean"/>
                <ref bean="folkBean"/>
            </list>
        </property>

        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>